<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReceptorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre ingresado:"
        android:layout_alignParentLeft="true"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:id="@+id/textViewNombreIngresado1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" [Nombre Recibido]"
        android:layout_alignParentRight="true"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/textViewNombreIngresado1"
        android:id="@+id/textViewNombreIngresado2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido ingresado:"
        android:layout_alignParentLeft="true"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:id="@+id/textViewApellidoIngresado1"
        android:layout_below="@+id/textViewNombreIngresado1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" [Apellido Recibido]"
        android:layout_alignParentRight="true"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/textViewApellidoIngresado1"
        android:layout_below="@+id/textViewNombreIngresado2"
        android:id="@+id/textViewApellidoIngresado2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad ingresada:"
        android:layout_alignParentLeft="true"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:id="@+id/textViewEdadIngresada1"
        android:layout_below="@+id/textViewApellidoIngresado1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" [Edad recibida]"
        android:layout_alignParentRight="true"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/textViewEdadIngresada1"
        android:layout_below="@+id/textViewApellidoIngresado2"
        android:id="@+id/textViewEdadIngresada2" />

</RelativeLayout>
